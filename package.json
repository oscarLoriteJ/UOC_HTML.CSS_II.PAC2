  "private": true,
  "description": "PAC2 a partir del Boilerplate i de l'entrega de la PEC2 de l'assignatura Advanced HTML/CSS Tools UOC",
  "scripts": {
    "parcel:serve": "parcel src/*.html -p 8123 --target web --open",
    "parcel:build": "parcel build src/*.html --target web --no-source-maps --no-cache",
    "clean": "rimraf dist .cache .cache-loader .parcel-cache",
    "dev": "npm-run-all clean parcel:serve",
    "build": "npm-run-all clean stylelint parcel:build",
    "test": "echo 'Everything is working as expected âœ…\nStart working on your project by running \\033[1mnpm run dev\\033[0m'",
    "stylelint": "stylelint src/**/*.scss"
  },
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./",
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oscarLoriteJ/UOC_HTML.CSS_II.PAC2.git"
  },
